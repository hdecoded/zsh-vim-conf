[user]
	name = hdecoded
	email = hdecoded@yahoo.com
[credential]
	helper = store
[core]
	editor = nvim
[init]
	defaultBranch = main
[core]
    pager = delta
	longpaths = true

[includeIf "gitdir:~/wsm/"]
    path = ~/wsm/.gitconfig

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true


    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
